<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3EFEF"
    tools:context=".EventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="58dp"
            android:background="#F3EFEF">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginLeft="@dimen/mainMargin"
                android:layout_marginTop="64dp"
                android:layout_marginRight="@dimen/mainMargin"
                android:background="@color/white"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="234dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/dosissemibold"
                        android:text="DATE:"
                        android:textSize="@dimen/testSizeNormal" />

                    <TextView
                        android:id="@+id/eventDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/date"
                        android:layout_marginLeft="234dp"
                        android:fontFamily="@font/dosisregular"
                        android:text="25/11/16"
                        android:textSize="@dimen/testSizeNormal" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/eventDate"
                        android:layout_marginLeft="234dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/dosissemibold"
                        android:text="TIME:"
                        android:textSize="@dimen/testSizeNormal" />

                    <TextView
                        android:id="@+id/eventTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/time"
                        android:layout_marginLeft="234dp"
                        android:fontFamily="@font/dosisregular"
                        android:text="25/11/16"
                        android:textSize="@dimen/testSizeNormal" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/eventTime"
                        android:layout_marginLeft="234dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/dosissemibold"
                        android:text="PRICE:"
                        android:textSize="@dimen/testSizeNormal" />

                    <TextView
                        android:id="@+id/eventPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price"
                        android:layout_marginLeft="234dp"
                        android:fontFamily="@font/dosisregular"
                        android:text="25/11/16"
                        android:textSize="@dimen/testSizeNormal" />

                    <TextView
                        android:id="@+id/venue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/eventPrice"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="42dp"
                        android:fontFamily="@font/dosissemibold"
                        android:text="VENUE:"
                        android:textSize="@dimen/testSizeNormal" />

                    <TextView
                        android:id="@+id/eventVenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/venue"
                        android:layout_marginLeft="32dp"
                        android:fontFamily="@font/dosisregular"
                        android:text="Kathmandu, Nepal"
                        android:textSize="@dimen/testSizeNormal" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/eventPhoto"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="38dp"
                android:elevation="8dp"
                android:src="@drawable/contentphoto" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="@dimen/mainMargin"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/mainMargin"
            android:background="@color/black"
            app:cardCornerRadius="16dp">

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/eventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="@dimen/mainMargin"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/mainMargin"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp">


        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>

