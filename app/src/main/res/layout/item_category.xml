<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EFEF"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/categoryCardView"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_margin="@dimen/mainMargin"
        app:cardCornerRadius="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/categoryBannerImage"
                android:layout_width="72dp"
                android:layout_height="84dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/mainMargin"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mainMargin"
                android:layout_marginTop="@dimen/mainMargin">

                <TextView
                    android:id="@+id/categoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dosissemibold"
                    android:text="Event detail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/testSizeNormal" />

                <TextView
                    android:id="@+id/categoryDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/dosisregular"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/testSizeNormal" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>