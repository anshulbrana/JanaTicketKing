<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogueBoxtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosisbold"
            android:text="Change Password"
            android:textSize="@dimen/testSizeHeading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dosissemibold"
            android:text="CurrentPassword"
            android:textSize="@dimen/testSizeNormal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosisregular"
            android:hint="User Name"
            android:textSize="@dimen/testSizeNormal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dosissemibold"
            android:text="New Password"
            android:textSize="@dimen/testSizeNormal" />

        <EditText
            android:id="@+id/fragmentNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosisregular"
            android:hint="First Name"
            android:textSize="@dimen/testSizeNormal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/dosissemibold"
            android:text="Confirm Password"
            android:textSize="@dimen/testSizeNormal" />

        <EditText
            android:id="@+id/fragmentConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosisregular"
            android:hint="Last Name"
            android:textSize="@dimen/testSizeNormal" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/fragmentUpdatePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dosisbold"
                android:layout_marginTop="12dp"
                android:text="Update Password"
                android:textSize="@dimen/testSizeNormal" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>